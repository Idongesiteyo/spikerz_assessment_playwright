{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "rootDir": ".", 
      "outDir": "dist"
    },
    "include": ["src/**/*.ts", "tests/**/*.ts", "pages/**/*.ts", "server.ts"],
    "exclude": ["node_modules"]
  }